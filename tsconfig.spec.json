{
  "extends": "./tsconfig",
  "compilerOptions": {
    "types": ["node", "jest"],
    "allowJs": true,
    "module": "umd",
    "resolveJsonModule": false,
    // for `yarn test:build`
    //   "'rootDir' is expected to contain all source files."
    //   and we don't want to impact `src/*` => `dist/*`
    "outDir": "./build",
    "rootDir": ".",
  },
  "include": [
    "src/**/*.spec.ts",
    "test/**/*.ts"
  ],
  "exclude": []
}
